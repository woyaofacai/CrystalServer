package com.crystal.servlet.impl;

import java.io.InputStream;
import java.net.MalformedURLException;
import java.net.URL;
import java.util.Enumeration;
import java.util.Set;

import javax.servlet.RequestDispatcher;
import javax.servlet.Servlet;
import javax.servlet.ServletContext;
import javax.servlet.ServletException;

import com.crystal.conf.WebConfiguration;
import com.crystal.servlet.ServletManager;

public class ServletContextImpl implements ServletContext {
	
	private String appName;
	private ServletManager servletManager;
	private WebConfiguration webConfig;
	
	public ServletContextImpl(String appName) {
		this.appName = appName;
		servletManager = new ServletManagerImpl(appName, this);
		webConfig = new WebConfiguration(appName, servletManager);
	}

	void init() {
		webConfig.init();
		servletManager.init();
	}
	
	void destroy() {
		servletManager.destroy();
	}
	
	public ServletManager getServletManager() {
		return servletManager;
	}

	@Override
	public Object getAttribute(String arg0) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Enumeration getAttributeNames() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public ServletContext getContext(String arg0) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
